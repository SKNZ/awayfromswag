<!DOCTYPE html>
<html>
<head lang="fr">
    <meta charset="UTF-8">
    <title>AFS - Accueil</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/forms-min.css"/>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:900,700,400' rel='stylesheet' type='text/css'>
    {{ helpers.assets.css('style') }}
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>
<body>
<div class="wrapper_menu">
    <div class="menu_ham"></div>
</div>
<aside>
    <a href="#" id="logo">{{ helpers.assets.img('logolarge.png', 'Logo Away From Security') }}</a>
    <nav>
        <form class="pure-form" action="#">
            <input class="pure-input-1-1 search_input" type="text" placeholder="Rechercher ..."/>
            <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
        </form>
        <ul>
            <li><a href="#">Événements</a></li>
            <li><a href="#">Annuaire</a></li>
            <li><a href="#">Partenaire</a></li>
        </ul>
    </nav>
    <h3>Se connecter</h3>
    <form class="pure-form" action="#">
        <fieldset class="pure-group">
            <input class="pure-input-1-1" type="text" placeholder="Nom d'utilisateur"/>
            <input class="pure-input-1-1" type="password" placeholder="Mot de passe"/>
        </fieldset>
    </form>
    <a href="#">Rester connecté</a>
    <a href="#">Inscription</a>
</aside>
<section>
    {% block content %}

    {% endblock %}
</section>
</body>
</html>