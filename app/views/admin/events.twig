{% extends "layout/default" %}

{% block content %}
    <article class="user-list">
        <h1>Gestion des évènements</h1>

        <form class="pure-form" action="#">
            <input class="pure-input-1-1 search_input" type="text" placeholder="Rechercher ..."/>
            <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
        </form>
        <h3>Modifier un évènement</h3>

        {% for event in allEvents %}
            <p class="user-list-item">
                <b>- <a href="/admievent/event/{{ event.id }}">{{ event.name|e }}</a></b>
                {{ event.personsnow  ~ ' personnes sur ' ~ event.personsmax }}
                {{ event.description ~ ' ...' }}
            </p>
        {% endfor %}

    </article>
{% endblock %}