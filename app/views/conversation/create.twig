{% extends "layout/default" %}

{% block content %}
    <article class="conversation">
        <h1>Création de conversation</h1>

        {% for error in errors %}
            <p class="">
                {{ error }}
            </p>
        {% endfor %}

        <form method="POST" action="/conversation/create" class="pure-form pure-form-aligned conversation-creation">
            <div class="pure-control-group">
                <label for="title">Intitulé</label>
                <input required name="title" placeholder="Ma conversation stylée"/>
            </div>

            <div class="pure-control-group">
                <label for="title">Participants</label>
                <textarea required id="participations" name="participations" placeholder="Toto">{{ dest }}</textarea>
            </div>

            <div class="pure-control-group">
                <label for="title">Message</label>
                <textarea required name="message" placeholder="Ici un message qualitatif"></textarea>
            </div>

            <div class="pure-controls">
                <input type="submit" value="Valider !" name="submit" class="pure-button pure-button-primary"/>
            </div>
        </form>
    </article>
{% endblock %}