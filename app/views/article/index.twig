{% extends "layout/default" %}
{% block content %}
    <article>
        <h1>Articles</h1>

        {% if auth.valid %}
            <a href="/article/add" class="pure-button add-article">Ajouter un article</a>
        {% endif %}

        {% if articles is empty %}
            <p>Il n'y a pas d'articles.</p>
        {% else %}
            <ul id="events">
                {% for article in articles %}
                    <li>
                        <a href="/article/show/{{ article.id }}"><h1>{{ article.title }}</h1>, </a>
                        <span class="mini-text">le {{ article.postdate }}, </span>
                        <span class="mini-text">Cat√©gorie : {{ article.category }}</span>

                        <p>
                            {{ article.text }}
                        </p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </article>
{% endblock %}